<project xmlns:ivy="antlib:org.apache.ivy.ant" name="Web3" default="build">
    <property name="src" location="src"/>
    <property name="java_code"
              location="${src}/main/java/com/edu/Web3"/>
    <property name="build" location="target"/>
    <property name="classpath" location="lib"/>
    <path id="build.classpath">
        <fileset dir="lib">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <target name="resolve">
        <ivy:retrieve/>
    </target>

    <target name="compile" depends="resolve" description="Compile java files">
        <mkdir dir="${build}/classes"/>
        <javac includeantruntime="false" destdir="${build}/classes" source="8">
            <src path="${java_code}"/>
            <classpath refid="build.classpath"/>
        </javac>
    </target>

    <target name="build" depends="compile">
<!--        <jar basedir="${build}/classes"-->
    </target>

    <target name="clean" description="Delete compiled project classes and all temporary files">
        <delete dir="${build}"/>
    </target>

    <target name="test" depends="build">

    </target>
    <target name="doc">

    </target>
    <target name="team" depends="build">

    </target>
</project>
