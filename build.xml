<project xmlns:ivy="antlib:org.apache.ivy.ant" name="Web3" default="build">
    <property file="build.properties"/>

    <path id="build.classpath">
        <fileset dir="${lib}">
            <include name="*.jar"/>
        </fileset>
    </path>

    <path id="test.classpath">
        <path refid="build.classpath" />
        <pathelement location="${build}"/>
        <pathelement location="${target}/test"/>
    </path>


    <target name="resolve">
        <ivy:retrieve/>
    </target>

    <target name="compile" depends="resolve" description="compile java files">
        <mkdir dir="${build}"/>
        <mkdir dir="${target}/test"/>
        <javac includeantruntime="false" destdir="${build}" source="8">
            <src path="${java_code}"/>
            <classpath refid="build.classpath"/>
        </javac>
        <javac includeantruntime="false" destdir="${target}/test" source="8">
            <src path="${src}/test/java"/>
            <classpath refid="test.classpath"/>
        </javac>
    </target>

    <target name="build" depends="compile" description="create jar file">
        <war destfile="${target}/${name}.war" webxml="${web_xml}">
            <classes dir="${build}"/>
            <lib dir="${lib}"/>
            <fileset dir="${main}/webapp/"/>
            <manifest>
                <attribute name="Created-By" value="Web"/>
                <attribute name="Manifest-Version" value="1.0"/>
                <attribute name="Main-Class" value="NoClass"/>
            </manifest>
        </war>
    </target>

    <target name="clean" description="delete compiled project classes and all temporary files">
        <delete dir="${target}"/>
        <delete dir="${lib}"/>
    </target>

    <target name="test" depends="build">
        <junit haltonfailure="yes" printsummary="yes">
            <classpath refid="test.classpath"/>
            <formatter type="xml"/>
            <batchtest fork="yes" todir="${target}">
                <fileset dir="${test}">
                    <include name="*Test.java"/>
                </fileset>
            </batchtest>
        </junit>
    </target>

    <target name="doc">

    </target>

    <target name="team" depends="build">

    </target>
</project>